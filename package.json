{
  "name": "fastermail",
  "version": "1.0.0",
  "description": "AI-powered email triage agent for Fastmail",
  "main": "dist/index.js",
  "type": "module",
  "scripts": {
    "dev": "tsx watch src/index.ts",
    "start": "node dist/index.js",
    "build": "tsc",
    "lint": "eslint src/",
    "format": "prettier --write src/",
    "typecheck": "tsc --noEmit",
    "pm2:start": "pm2 start ecosystem.config.cjs",
    "pm2:stop": "pm2 stop fastermail",
    "pm2:restart": "pm2 restart fastermail",
    "pm2:logs": "pm2 logs fastermail",
    "pm2:status": "pm2 status"
  },
  "keywords": [
    "email",
    "fastmail",
    "jmap",
    "ai",
    "triage"
  ],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^25.0.3",
    "@typescript-eslint/eslint-plugin": "^8.50.0",
    "@typescript-eslint/parser": "^8.50.0",
    "eslint": "^9.39.2",
    "eslint-config-prettier": "^10.1.8",
    "prettier": "^3.7.4",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "@anthropic-ai/sdk": "^0.71.2",
    "@libsql/client": "^0.15.15",
    "dotenv": "^17.2.3"
  }
}
